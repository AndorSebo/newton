<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="hu.newtonsapple.andor.OptionsActivity"
    android:background="@color/background"
    android:padding="16dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:text="@string/settings"
        style="@style/textStyle"
        android:textColor="@color/colorAccent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#444444"/>
</LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
         <TextView
             android:id="@+id/vibrateTV"
             android:text="@string/vibration"
             style="@style/textStyle"
             android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/tabletTV"
            android:text=""
            style="@style/textStyle"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center">
            <com.rm.rmswitch.RMSwitch
                android:id="@+id/vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checked="false"
                app:forceAspectRatio="false"
                app:enabled="true"
                app:switchDesign="large"
                app:switchBkgCheckedColor="@color/red_btn_bg_color"
                app:switchBkgNotCheckedColor="#444444"
                app:switchToggleCheckedColor="@color/button_text_color"
                app:switchToggleNotCheckedColor="@color/button_text_color"/>

        </LinearLayout>

    </LinearLayout> <!-- Vibrate layout -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/controlTV"
            android:text="@string/control"
            style="@style/textStyle"
            android:textColor="@color/colorAccent"
            android:gravity="start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center">
            <com.rm.rmswitch.RMSwitch
                android:id="@+id/control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checked="false"
                app:forceAspectRatio="false"
                app:enabled="true"
                app:switchDesign="large"
                app:switchToggleCheckedImage="@drawable/ic_arrow"
                app:switchToggleNotCheckedImage="@drawable/ic_rotate"
                app:switchBkgCheckedColor="#5588BB"
                app:switchBkgNotCheckedColor="#5588BB"
                app:switchToggleCheckedColor="@color/button_text_color"
                app:switchToggleNotCheckedColor="@color/button_text_color"/>
        </LinearLayout>

    </LinearLayout> <!-- Control layout -->
</LinearLayout> <!-- Panels -->