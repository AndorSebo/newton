<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.newtonsapple.andor.GameActivity"
    android:background="@drawable/background"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/heart"/>
                <TextView
                    android:id="@+id/heartTV"
                    style="@style/textStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|start">

                <ImageView
                    android:id="@+id/leftArrow"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/leftarrow"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="3"
            android:textSize="64sp" />

        <ImageView
            android:id="@+id/newton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:src="@drawable/newton_run"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_apple" />

                <TextView
                    android:id="@+id/pointTV"
                    style="@style/textStyle"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_crown" />

                <TextView
                    android:id="@+id/heightTV"
                    style="@style/textStyle"
                    android:layout_gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end">

                <ImageView
                    android:id="@+id/rightArrow"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/rightarrow"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/apples"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/fall0"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall1"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall2"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall3"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall4"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall5"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall6"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall7"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall8"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall9"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall10"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall11"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall12"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall13"
                style="@style/appleStyle" />

            <ImageView
                android:id="@+id/fall14"
                style="@style/appleStyle" />


        </LinearLayout>

    </FrameLayout>
</LinearLayout>
